<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="28dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_gambar_user_post"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fotoprofil"
        app:civ_border_color="#0095CA"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_user_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Marjuki"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/civ_gambar_user_post"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tanggal_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="22 September 2019, 20:14"
        android:textColor="@color/colorGreyFont"
        app:layout_constraintStart_toEndOf="@+id/civ_gambar_user_post"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_user_post" />

    <TextView
        android:id="@+id/tv_judul_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Bagaimana cara membersihkan kolam yang ada ikannya?"
        android:textColor="@color/colorGreyForum"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_gambar_user_post" />

    <ImageView
        android:id="@+id/iv_icon_balasan_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_balasan_forum"
        app:layout_constraintEnd_toStartOf="@+id/tv_jumlah_balasan_post"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_post" />

    <TextView
        android:id="@+id/tv_text_balasan_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Balasan"
        android:textColor="@color/colorGreyFont"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon_balasan_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_icon_balasan_post" />

    <TextView
        android:id="@+id/tv_jumlah_balasan_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="3"
        android:textColor="@color/colorGreyFont"
        app:layout_constraintEnd_toStartOf="@+id/tv_text_balasan_post"
        app:layout_constraintTop_toTopOf="@+id/tv_text_balasan_post" />

</androidx.constraintlayout.widget.ConstraintLayout>