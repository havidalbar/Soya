<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/background_biru_tuntunan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gambar_tuntunan"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginStart="14dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tuntunanpengelolaanair"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/tv_judul_tuntunan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="sans-serif-medium"
        android:text="Pengelolaan Air"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_gambar_tuntunan"
        app:layout_constraintTop_toTopOf="@+id/iv_gambar_tuntunan" />

    <TextView
        android:id="@+id/tv_deskripsi_tuntunan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tuntunan mengelola air yang akan digunakan di kolam anda"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/iv_gambar_tuntunan"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_tuntunan" />

</androidx.constraintlayout.widget.ConstraintLayout>